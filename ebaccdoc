      <td>German</td>
      <td>Business studies</td>
      <td>Business studies</td>
      <td>Geography</td>
      <td> </td>
    </tr>
    <tr>
      <td>Spanish</td>
      <td>Computer science</td>
      <td>Child development</td>
      <td>History</td>
      <td> </td>
    </tr>
